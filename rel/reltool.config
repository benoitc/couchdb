{sys, [
    {lib_dirs, ["../apps", "../deps"]},
    {rel, "couchdb", "0.12", [
        kernel,
        stdlib,
        sasl,
        crypto,
        ssl,
        inets,
        xmerl,
        runtime_tools,
        mochiweb,
        ibrowse,
        oauth,
        couch
    ]},
    {rel, "start_clean", "", [kernel, stdlib]},
    {boot_rel, "couchdb"},
    {profile, embedded},
    {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)"]},
    {excl_archive_filters, [".*"]},

    {app, couch, [{incl_cond, include}]}
]}.

{overlay_vars, "couchdb.config"}.
{overlay, [
    {mkdir, "var/log"},
    {mkdir, "var/run"},
    {copy, "overlay/bin"},
    {copy, "overlay/etc"},
    {copy, "overlay/share"},
    {copy, "../couchjs/build/couchjs", "bin/couchjs"},
    {copy, "../couchjs/build/main.js", "share/couchjs/main.js"},
    {template, "overlay/etc/default.ini", "etc/default.ini"},
    {template, "overlay/etc/vm.args", "etc/vm.args"}
]}.
