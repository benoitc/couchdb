function quit {
  exit
}

PREFIX="/opt/couchdb"
COUCHDB_USER=`whoami`
ABSPATH="$(cd "${0%/*}" 2>/dev/null; echo "$PWD"/"${0##*/}")"
if test ! -n "$DIRPATH"; then DIRPATH=`dirname "$ABSPATH"`; fi

while [ $# -gt 0 ]
do
  case $1
  in
    -p)
      PREFIX=$2
      shift 2
    ;;
    -t)
      TEMPLATE=$2
      shift 2
    ;;
    -d)
      DATA=$2
      shift 2
    ;;
    -v)
      VIEW=$2
      shift 2
    ;;
    -u)
      COUCHDB_USER=$2
      shift 2
    ;;
    *)
      echo "usage: $0 [-p {prefix} -t {template} -d {data_dir} -v {view_dir} -u {user}]"
      quit
    ;;
  esac
done

if test ! -n "$DATA"; then DATA="$PREFIX/var/lib"; fi
if test ! -n "$VIEW"; then VIEW="$PREFIX/var/lib"; fi

echo "==> configuring couchdb in rel/couchdb.config"
cat > rel/couchdb.config << EOF
{prefix, "$PREFIX"}.
{data_dir, "$DATA"}.
{view_dir, "$VIEW"}.
{user, "$COUCHDB_USER"}.
{node_name, "-name couchdb"}.
{couchdb_port, 5984}.
{ssl_port, 6986}.
EOF

cat > install.mk << EOF
# The contents of this file are auto-generated by configure
prefix = $PREFIX
data_dir = $DATA
view_dir = $VIEW
user = $COUCHDB_USER
EOF

# finally, a few config files for local development nodes

cat > rel/dev.config << EOF
{prefix, "$DIRPATH/rel/dev"}.
{data_dir, "$DIRPATH/rel/tmpdata/dev"}.
{view_dir, "$DIRPATH/rel/tmpdata/dev"}.
{node_name, "-name dev@127.0.0.1"}.
{couchdb_port, 15984}.
{ssl_port, 16986}.
EOF

./rebar get-deps && mkdir -p apps/couch/ebin && cat rel/couchdb.config
